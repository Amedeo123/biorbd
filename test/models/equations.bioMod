version 4

// This is a model test to see if equations works properly
// The mesh are used to hold that information. The x coordinate uses an equation
// The y coordinate is the expected value for this coordinate.

    // Segment
    segment base
        mesh 2*-2 -4 0
    
    
        // Plus and minus
        mesh 1+1 2 0
        mesh -2+1 -1 0
        mesh 2-1 1 0
        mesh 1-2 -1 0
        mesh -2-1 -3 0

        // Multiplications
        mesh 2*2 4 0
        mesh -2*2 -4 0
        mesh 2*-2 -4 0
        
        // Division
        mesh 4/2 2 0
        mesh -4/2 -2 0
        mesh 4/-2 -2 0
        
        // Parentheses and order of operation
        mesh 2+2*3 8 0
        mesh (2+2)*3 12 0
        mesh 4+4/2 6 0
        mesh (4+4)/2 4 0
        mesh -(1)+2 1 0
        mesh (-1)+2 1 0
        mesh 2+((2+3)*3)*2 32 0
        mesh 2+(2+3*3)*2 24 0
        mesh 2+2+3*3*2 22 0
        
        // scientific notation
        mesh 1e1 1 0
        mesh 1e2 10 0
        mesh 1e-1 0.1 0
        mesh 1e-2 0.01 0
        // mesh 1e-10 0.0000000001 0
    endsegment

